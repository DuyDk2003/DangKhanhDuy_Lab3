@model DangKhanhDuy_Lab3.ViewModels.BlogViewModel
@foreach (var item in Model.Blogs)
{
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12 text-center">
                    <img id="mainImage" src="~/images/products/@item.Img" alt="Main
Image" class="img-responsive main-image">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 ">
                    <img src="~/images/products/@item.Img" alt="Thumbnail 1"
                         class="img-responsive thumbnail" onclick="changeImage(this)">
                </div>
                <div class="col-md-6">
                    <img src="~/images/products/@item.Img" alt="Thumbnail 2"
                         class="img-responsive thumbnail" onclick="changeImage(this)">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h2>@item.Title</h2>
            <h4>
               @item.Detail
            </h4>
           
            
        </div>
    </div>
   
}
@section scripts {
    <script>
        function changeImage(img) {
            var mainImage = document.getElementById('mainImage');
            var tempSrc = mainImage.src;
            mainImage.src = img.src;
            img.src = tempSrc;
        }
    </script>
}